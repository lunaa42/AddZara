<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:backgroundTint="#FFFFFF"
    tools:context=".authentication.SignupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgbacksignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:src="?attr/actionModeCloseDrawable"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            style="@style/UltraLightClassicTextStyle"
            android:layout_width="166dp"
            android:layout_height="0dp"
            android:layout_marginBottom="31dp"
            android:fontFamily="sans-serif"
            android:text="PERSONAL DETAILS"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/etUsernameSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgbacksignup" />

        <EditText
            android:id="@+id/etUsernameSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:ems="10"
            android:hint="E-MAIL"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/etPasswordSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/etPasswordSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:ems="10"
            android:hint="NEW PASSWORD"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/firstnamesignup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etUsernameSignUp" />

        <EditText
            android:id="@+id/phoneSign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="79dp"
            android:ems="10"
            android:hint="PHONE"
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/btSignupSignup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastnamesignup" />

        <Button
            android:id="@+id/btSignupSignup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="82dp"
            android:background="@drawable/costum_buttons"
            android:text="CREATE ACCOUNT"
            android:textColor="#000000"
            android:textColorHighlight="#FFFFFFFF"
            android:textColorLink="#FAF1F1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneSign" />

        <EditText
            android:id="@+id/firstnamesignup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="29dp"
            android:ems="10"
            android:hint="FIRST NAME"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/lastnamesignup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordSignUp" />

        <EditText
            android:id="@+id/lastnamesignup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="23dp"
            android:ems="10"
            android:hint="LAST NAME"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/phoneSign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstnamesignup" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
