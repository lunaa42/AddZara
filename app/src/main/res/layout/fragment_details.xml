<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Car Image and Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gobackDetails"
                android:layout_width="30dp"
                android:layout_height="36dp"
                android:src="@drawable/back_symbol" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/favorite_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/bookmark__1_"
                android:contentDescription="Favorite"
                android:onClick="onFavoriteButtonClick" />
        </LinearLayout>

        <!-- Car Image -->
        <ImageView
            android:id="@+id/ivProductdeta"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop" />

        <!-- Colour Text -->
        <TextView
            android:id="@+id/tvcolourDeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/tvproductDeta"
            style="@style/UltraLightClassicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PRODUCT :"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvproduct2Deta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- Price -->
        <TextView
            android:id="@+id/tvpriceZaraitem"
            style="@style/UltraLightClassicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PRICE:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvprice2Deta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvdescriDeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="DESCRIPTION:"
            style="@style/UltraLightClassicTextStyle"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvdescri2Deta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- Size -->
        <TextView
            android:id="@+id/tvsizeDeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/UltraLightClassicTextStyle"
            android:textColor="#000000"
            android:text="SIZE:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvsize2Deta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- Buy Button -->
        <Button
            android:id="@+id/btnBuydetail"
            style="@style/UltraLightClassicTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#00FFFFFF"
            android:text="BUY"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
